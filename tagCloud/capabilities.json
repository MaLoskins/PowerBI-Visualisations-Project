{
    "dataRoles": [
        {
            "displayName": "Word",
            "name": "word",
            "kind": "Grouping",
            "description": "The text to display in the word cloud"
        },
        {
            "displayName": "Size",
            "name": "size",
            "kind": "Measure",
            "description": "Determines font size of each word"
        },
        {
            "displayName": "Color Field",
            "name": "colorField",
            "kind": "GroupingOrMeasure",
            "description": "Colour category or explicit hex value"
        },
        {
            "displayName": "Tooltip Fields",
            "name": "tooltipFields",
            "kind": "GroupingOrMeasure",
            "description": "Additional tooltip information"
        }
    ],
    "objects": {
        "wordSettings": {
            "properties": {
                "minFontSize": {
                    "type": { "numeric": true }
                },
                "maxFontSize": {
                    "type": { "numeric": true }
                },
                "fontFamily": {
                    "type": {
                        "enumeration": [
                            { "displayName": "Segoe UI", "value": "Segoe UI" },
                            { "displayName": "Arial", "value": "Arial" },
                            { "displayName": "Impact", "value": "Impact" },
                            { "displayName": "Georgia", "value": "Georgia" },
                            { "displayName": "Courier New", "value": "Courier New" },
                            { "displayName": "Comic Sans MS", "value": "Comic Sans MS" }
                        ]
                    }
                },
                "fontWeight": {
                    "type": {
                        "enumeration": [
                            { "displayName": "Normal", "value": "normal" },
                            { "displayName": "Bold", "value": "bold" },
                            { "displayName": "Black (900)", "value": "900" }
                        ]
                    }
                },
                "maxWords": {
                    "type": { "numeric": true }
                },
                "padding": {
                    "type": { "numeric": true }
                }
            }
        },
        "rotationSettings": {
            "properties": {
                "rotationMode": {
                    "type": {
                        "enumeration": [
                            { "displayName": "None", "value": "none" },
                            { "displayName": "Right Angle", "value": "rightAngle" },
                            { "displayName": "Random", "value": "random" },
                            { "displayName": "Custom", "value": "custom" }
                        ]
                    }
                },
                "customAngle": {
                    "type": { "numeric": true }
                },
                "rightAngleChance": {
                    "type": { "numeric": true }
                },
                "randomMin": {
                    "type": { "numeric": true }
                },
                "randomMax": {
                    "type": { "numeric": true }
                }
            }
        },
        "colorSettings": {
            "properties": {
                "colorMode": {
                    "type": {
                        "enumeration": [
                            { "displayName": "Palette", "value": "palette" },
                            { "displayName": "Gradient", "value": "gradient" },
                            { "displayName": "Field", "value": "field" },
                            { "displayName": "Single Colour", "value": "single" }
                        ]
                    }
                },
                "singleColor": {
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "gradientStart": {
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "gradientEnd": {
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "selectedColor": {
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "hoverOpacity": {
                    "type": { "numeric": true }
                }
            }
        },
        "layoutSettings": {
            "properties": {
                "spiralType": {
                    "type": {
                        "enumeration": [
                            { "displayName": "Archimedean", "value": "archimedean" },
                            { "displayName": "Rectangular", "value": "rectangular" }
                        ]
                    }
                },
                "centerBias": {
                    "type": { "numeric": true }
                }
            }
        }
    },
    "dataViewMappings": [
        {
            "table": {
                "rows": {
                    "select": [
                        { "for": { "in": "word" } },
                        { "for": { "in": "size" } },
                        { "for": { "in": "colorField" } },
                        { "for": { "in": "tooltipFields" } }
                    ],
                    "dataReductionAlgorithm": {
                        "top": { "count": 10000 }
                    }
                }
            }
        }
    ],
    "tooltips": {
        "supportedTypes": { "default": true, "canvas": true },
        "roles": ["tooltipFields"]
    },
    "privileges": []
}
