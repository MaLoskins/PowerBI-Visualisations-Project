{
    "compilerOptions": {
        "allowJs": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2022",
        "sourceMap": true,
        "outDir": "./.tmp/build/",
        "moduleResolution": "node",
        "declaration": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,

        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "skipLibCheck": true,
        "lib": [
            "es2022",
            "dom"
        ]
    },
    "files": [
        "./src/visual.ts"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}
