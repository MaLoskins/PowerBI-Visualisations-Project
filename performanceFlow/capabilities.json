{
    "dataRoles": [
        {
            "displayName": "Source",
            "name": "source",
            "kind": "Grouping",
            "displayNameKey": "Role_Source"
        },
        {
            "displayName": "Destination",
            "name": "destination",
            "kind": "Grouping",
            "displayNameKey": "Role_Destination"
        },
        {
            "displayName": "Value",
            "name": "value",
            "kind": "Measure",
            "displayNameKey": "Role_Value"
        },
        {
            "displayName": "Link Color",
            "name": "linkColor",
            "kind": "Measure",
            "displayNameKey": "Role_LinkColor"
        },
        {
            "displayName": "Tooltip Fields",
            "name": "tooltipFields",
            "kind": "GroupingOrMeasure",
            "displayNameKey": "Role_TooltipFields"
        }
    ],
    "objects": {
        "nodeSettings": {
            "properties": {
                "nodeWidth": {
                    "type": { "numeric": true }
                },
                "nodePadding": {
                    "type": { "numeric": true }
                },
                "nodeCornerRadius": {
                    "type": { "numeric": true }
                },
                "nodeColor": {
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "nodeOpacity": {
                    "type": { "numeric": true }
                },
                "nodeAlign": {
                    "type": { "enumeration": [
                        { "value": "left", "displayName": "Left" },
                        { "value": "right", "displayName": "Right" },
                        { "value": "center", "displayName": "Center" },
                        { "value": "justify", "displayName": "Justify" }
                    ] }
                }
            }
        },
        "linkSettings": {
            "properties": {
                "linkOpacity": {
                    "type": { "numeric": true }
                },
                "linkHoverOpacity": {
                    "type": { "numeric": true }
                },
                "colorMode": {
                    "type": { "enumeration": [
                        { "value": "sourceColor", "displayName": "Source Color" },
                        { "value": "destColor", "displayName": "Dest Color" },
                        { "value": "gradient", "displayName": "Gradient" },
                        { "value": "fixed", "displayName": "Fixed" }
                    ] }
                },
                "fixedLinkColor": {
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "linkCurvature": {
                    "type": { "numeric": true }
                }
            }
        },
        "labelSettings": {
            "properties": {
                "showNodeLabels": {
                    "type": { "bool": true }
                },
                "labelFontSize": {
                    "type": { "numeric": true }
                },
                "labelFontColor": {
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "labelPosition": {
                    "type": { "enumeration": [
                        { "value": "inside", "displayName": "Inside" },
                        { "value": "outside", "displayName": "Outside" }
                    ] }
                },
                "showValues": {
                    "type": { "bool": true }
                },
                "valueFontSize": {
                    "type": { "numeric": true }
                }
            }
        },
        "colorSettings": {
            "properties": {
                "colorByNode": {
                    "type": { "bool": true }
                },
                "selectedLinkColor": {
                    "type": { "fill": { "solid": { "color": true } } }
                },
                "selectedNodeColor": {
                    "type": { "fill": { "solid": { "color": true } } }
                }
            }
        },
        "groupingSettings": {
            "properties": {
                "enableGrouping": {
                    "type": { "bool": true }
                },
                "maxDestinations": {
                    "type": { "numeric": true }
                },
                "maxSources": {
                    "type": { "numeric": true }
                },
                "minPctThreshold": {
                    "type": { "numeric": true }
                }
            }
        },
        "layoutSettings": {
            "properties": {
                "iterations": {
                    "type": { "numeric": true }
                },
                "sortNodes": {
                    "type": { "enumeration": [
                        { "value": "auto", "displayName": "Auto" },
                        { "value": "name", "displayName": "Name" },
                        { "value": "value", "displayName": "Value" },
                        { "value": "none", "displayName": "None" }
                    ] }
                }
            }
        }
    },
    "dataViewMappings": [
        {
            "table": {
                "rows": {
                    "select": [
                        { "for": { "in": "source" } },
                        { "for": { "in": "destination" } },
                        { "for": { "in": "value" } },
                        { "for": { "in": "linkColor" } },
                        { "for": { "in": "tooltipFields" } }
                    ],
                    "dataReductionAlgorithm": {
                        "top": {
                            "count": 10000
                        }
                    }
                }
            }
        }
    ],
    "tooltips": {
        "supportedTypes": {
            "default": true,
            "canvas": true
        },
        "roles": ["tooltipFields"]
    },
    "privileges": []
}
